            function ObtenerPerfilArea(){

                var sPerfil = $('#cboPerfil').val();
                var perClave = "";
                var araClave = "";

                if ( sPerfil.substr(0,1) == "A" )
                {
                    $("#divMenuAccion1").hide();
                    perClave = "0";
                    araClave = sPerfil.substr(1);
                }
                else
                {
                    $("#divMenuAccion1").show();
                    perClave = sPerfil.substr(1);
                    araClave = "0";
                }

                return {
                    perfil: perClave,
                    area: araClave
                };
            }

