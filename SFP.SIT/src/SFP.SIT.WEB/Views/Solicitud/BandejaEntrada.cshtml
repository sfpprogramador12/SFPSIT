                        items: [
                            {id: 'buscar',  type: 'button', caption: 'Busqueda Avanzada', hidden: true},
                            { type: 'break',  id: 'break0' },
                            {id: 'expander',type: 'button', caption: '', img:'icon-fullSize'},
