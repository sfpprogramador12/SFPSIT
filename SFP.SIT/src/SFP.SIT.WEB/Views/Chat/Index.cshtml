    <link href="//netdna.bootstrapcdn.com/bootstrap/3.0.3/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//netdna.bootstrapcdn.com/bootstrap/3.0.3/js/bootstrap.min.js"></script>
    <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
    <!------ Include the above in your HEAD tag ---------->
    <link href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css" rel="stylesheet">


    <script>
        var users =  @Html.Raw(ViewBag.ConnectedUsers);
        console.log(users);
    </script>
    
    <div class="container">
        <div class="row">
            <div class="col-lg-3">
                <div class="btn-panel btn-panel-conversation">
                </div>
            </div>
            <div class="col-lg-offset-1 col-lg-7">
                <div class="btn-panel btn-panel-msg">
                </div>
            </div>
        </div>
        <div class="row">
            <div class="conversation-wrap col-lg-3">
                <script>
                    var yourName = "";
                    for (var i = 0; i < users.records.length; i++){
                        if (users.records[i].AdmUsuMdl.usrclave == @ViewBag.YourId) yourName = users.records[i].UsuarioNombre;

                        var s = '<div class="media conversation" id="' + users.records[i].AdmUsuMdl.usrclave+'" >'+
                                '<a class="pull-left" href="#">'+
                                '<img class="media-object" data-src="holder.js/64x64" alt="64x64" style="width: 50px; height: 50px;" src="data:image/png;base64,">'+
                                '</a>'+
                                '<div class="media-body">'+
                                '<h5 class="media-heading @ViewBag.YourId">' + users.records[i].UsuarioNombre +'</h5>'+
                                '<small>' + users.records[i].UsuarioNombre +'</small>'+
                                '</div>'+
                            '</div>';
                        $(".conversation-wrap").append(s);
                    }
                </script>

                
                
            </div>

            <div class="message-wrap col-lg-8">
                <div class="msg-wrap">

                    <div class="alert alert-info msg-date">
                        <strong>Mensajes Recibidos</strong>
                    </div>
                    <div class="media msg">
                        <a class="pull-left" href="#">
                            <img class="media-object" data-src="holder.js/64x64" alt="64x64" style="width: 1px; height: 1px;" src="data:image/png;base64,">
                        </a>
                        <div class="media-body">
                            <small class="pull-right time"><i class="fa fa-clock-o"></i> </small>
                            <h5 class="media-heading"></h5>
                            <small class="col-lg-10"></small>
                        </div>
                    </div>
                </div>
                <div class="send-wrap " style="display: none;">
                    <textarea class="form-control send-message" rows="3" placeholder="Escribe tu respuesta ..."></textarea>

                </div>
                <div class="btn-panel">
                     <a href="#" class=" col-lg-4 text-right btn   send-message-btn pull-right" role="button"><i class="fa fa-plus"></i> Enviar Mensaje</a>
                </div>
            </div>
        </div>
    </div>
    
    <script>
        function newConversation() {
            console.log("new Conversation");
            $(".send-wrap").css("display", "block");
        }
        var toName = "";
        var toId = 0;
        function renderMessage(messages) {
            var idTo = 1000;
            var yourId = @Html.Raw(ViewBag.YourId);
            

            if (messages == "1" | messages == undefined) { newConversation(); }
            for (var i = 0; i < messages.length; i++) {

                var Name = "";
                if (messages[i].to == yourId) {
                    Name = yourName;
                } else {
                    Name = toName;
                }
                var message = messages[i].mess;
                var date = messages[i].date;
                mesageBody = '<div class="media msg">' +
                    '<a class="pull-left" href="#">' +
                    '<img class="media-object" data-src="holder.js/64x64" alt="64x64" style="width: 32px; height: 32px;" src="data:image/png;base64,">' +
                    '</a>' +
                    '<div class="media-body">' +
                    '<small class="pull-right time"><i class="fa fa-clock-o"></i> '+date+'</small>' +
                    '<h5 class="media-heading">' + Name + '</h5>' +
                    '<small class="col-lg-10">' + message + '</small>' +
                    '</div>' +
                    '</div>';
                $(".msg-wrap").append(mesageBody);
            }
        }

        function showMessagesFromUserId(id) {
            console.log("Obteniendo mensajes");

            var trackingJSON = JSON.stringify(id);
            var urlAjax = "/chat/Getmessages";

            $.ajax({
                type: "POST",
                url: urlAjax,
                contentType: "application/json",
                data: trackingJSON,
                beforeSend: function () { console.log("Loading..."); },
                complete: function () { console.log(""); },
                success: function (data) {
                    var json = JSON.parse(data);
                    console.log(json);
                    console.log("ajax worked: " + json.records.AdmUsuMdl.usractivo);
                    renderMessage(json.records.AdmUsuMdl.usractivo);
                },
                error: function (data) { console.log("ajax error"); },
                dataType: 'json'
            });
        }




        $(document).ready(function () {
            /**
            *  Se pide por ajax los mensajes del usuario actual con el que se envia como parametro
            *  Se responde en un JSON
            */

            $(".conversation").click(function (event) {
                toId = event.target.id;
                showMessagesFromUserId(event.target.id);
                toName = $(".media-heading." + event.target.id).text();
            });

            $(".send-message-btn").click(function (event) {
                // se obtiene el id del destinatario y el mensaje
                console.log("enviando");
                var messages = [{ "to": "1000", "from": 10000, "mess": $(".send-message").val(), "date":"01/01/2018" }];
                renderMessage(messages);
                $(".send-message").val("");

                //scroll hast abajo
                var container = document.getElementsByClassName('msg-wrap');
                var childrenCount = document.getElementsByClassName("msg-wrap").childNodes.length;
                var rowToScrollTo = document.getElementsByClassName('msg-wrap').childNodes[childrenCount - 1];;
                container.scrollTop = rowToScrollTo.offsetTop;
            });
        });
    </script>